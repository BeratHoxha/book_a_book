<div class="container">
    <br><br>
      <div class="row" id="circular">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >
   
   
          <div class="panel panel-info">
            <div class="panel-body">
              <div class="row">
                <div class="col-md-3 col-lg-3 " align="center"> <img alt="User Pic" src="http://iconizer.net/files/Bunch_of_Bluish_Icons/orig/user.png"> </div>
                
              
                <div class=" col-md-9 col-lg-9 "> 
                  <table class="table table-user-information">
                    <tbody>
                      <tr>
                        <td><%= t('.name') %></td>
                        <td><%= @user.name.capitalize %></td>
                      </tr>
                      <tr>
                        <td><%= t('.email') %></td>
                        <td><%= link_to @user.email, '#'%></td>
                      </tr>
                      <tr>
                        <td><%= t('.dob') %></td>
                        <td><%= @user.date_of_birth.strftime("%m/%d/%Y")%></td>
                      </tr>
                   
                         <tr>
                             <tr>
                        <td><%= t('.gender') %></td>
                        <td><%= @user.gender%></td>
                      </tr>
                      <tr>
                        <td><%= t('.sign_up_date') %></td>
                        <td><%= @user.created_at.strftime("%m/%d/%Y - %I:%M%p") %></td>
                      </tr>
                           
                      </tr>
                     
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
            
          </div>
        </div>
      </div>
    </div>