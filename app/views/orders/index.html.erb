<h1 style = "padding-top: 60px; padding-left: 600px;">Listing Orders</h1>
  <div class="container" style = "padding-left: 200px;">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Email</th>
        <th>Time</th>
        <th>Pay type</th>
      </tr>
    </thead>
    <tbody>
     <% @orders.each do |order| %>
      <tr>
        <td><%=order.name %></td>
        <td><%=order.address %></td>
        <td><%=order.email %></td>
        <td><%=order.created_at %></td>
        <td><%=order.pay_type %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
  