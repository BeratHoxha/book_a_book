<div class="show_card-block">
	<h4 class="card-title"><%= link_to line_item.product.title, store_path(line_item.product) %></h4>
	<strong class="card-title"><%= number_to_currency(line_item.total_price) %></strong>

	<%= link_to 'Delete', {:controller => "line_items", :action => 'destroy', id: line_item.id} ,  data: { confirm: 'Are you sure?'},  :method => :delete, id: 'delete_book' %>
	<p class="card-title"><%= format_qty_value(line_item.quantity) %></p>
	<p class="show_card-text text-muted">Last updated <%= time_ago_in_words(line_item.updated_at) %></p>
</div>