<section class="show-product left-right">
<div class="container">
	<p id="notice"><%= notice %></p>

	<section class="all_items col-lg-9">
		<div class="show_card">
			<%= render(@cart.line_items) %>
		</div>

		<div class="total_items">
			<p>Total</p>
			<%= number_to_currency(@cart.total_price) %>
		</div>
	</section>

	<aside class="cart-sidebar col-lg-3">
	</aside>
</section>

<div class="tools container">
	<div class="col-lg-12" style = "padding-bottom: 50px">
		<%= link_to 'Edit', edit_cart_path(@cart), class: 'btn btn-primary', id: 'edit_button'%>
		<%= link_to 'Back', store_path, class: 'btn btn-default', id: 'edit_button' %>
	  	<%= button_to "Checkout", new_order_path, method: :get, id: 'checkout', class: 'btn btn-success'%>
		<%= button_to 'Empty cart', @cart, method: :delete, data: { confirm: 'Are you sure?'}, class:'btn btn-danger', id: 'empty' %>
	</div>
</div>