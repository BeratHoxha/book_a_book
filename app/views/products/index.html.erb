
<div class="banner-slider">
  <div class="callbacks_container">
    <ul class="rslides" id="header-img">
      <div class="banner-img">
        <%= image_tag("banner2.jpg") %>
      </div>
      <h2 style = "margin-left :460px; margin-top: 120px">Today a reader</h2>
      <h2 style = "margin-left :420px; margin-top: 170px">Tomorrow a leader</h2>
    </ul>
  </div>
</div>
<div class="main">
  <div class="wrap">
    <div class="section group">
      <div class="cont span_2_of_3" style = "margin-left:-40px">
           <% if @error %>
              <h1 class = 'error'> <%= @error %> </h1>
           <% end %>
           <% @products.each do |category, products| %> 
             
             <% if category.eql?"Technology" %>
                   <h2 class="head"><%= t '.tekno' %></h2>
                <% elsif category.eql?"Business" %>
                   <h2 class="head"><%= t '.business' %></h2>
                <% elsif category.eql?"History" %>
                   <h2 class="head"><%= t '.history' %></h2>
                <% else  %>
                   <h2 class="head"><%= t '.other' %></h2>
              <% end %>

             <%products.each do |product| %>
               <div class="col_1_of_3 span_1_of_3"  style = "width: 230px; height: 350px;">
                 <a href="single.html">
                  <div class="inner_content clearfix">
                    <div class="product_image">
                      <%= link_to image_tag(product.image_url, class: 'img-responsive card-img-top'), product_path(id: product.id) %>
                     </div>
                    <div class="price">
                       <div class="cart-left">
                        <p class="title" style = "width: 200px"><%= link_to product.title, product_path(id: product.id) %></p>
                        <div class="price1">
                          <span class="actual"><%= number_to_currency(product.price, locale: :shq) %></span>
                        </div>
                      </div>
                      <div class="cart-right" style = "margin-top: 30px"> </div>
                      <div class="clear"></div>
                    </div>       
                  </div>
                  </a>
                </div>
              <%end%>
          <% end %>
          <div class="top-border"> </div>
       <div class="clear"></div>
     </div>
   </div>
  </div>
</div>
